<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/cropcard_bg"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/crop_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop 1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:background="@drawable/cropcard_bg"
        android:id="@+id/soil_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soil Type: Black Soil"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/crop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop Type: Potato"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/fertilizer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertilizer Recommendation"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/fertilizer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ammonium, Sulphate, Nitrate"
        android:textColor="#FFFFFF"
        android:background="@drawable/edit_text_bg"
        android:padding="8dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View More"
        android:textColor="#00BFFF"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
